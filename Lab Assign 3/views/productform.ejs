<style>
    .add-product-form {
      background-color: #fff;
      padding: 20px;
      border: 1px solid #e0e0e0;
      border-radius: 15px;
      margin-bottom: 30px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      width: 50%;
      margin: 0 auto;
      display: block;
    }
  
    .add-product-form h2 {
      color: #333;
      font-size: 20px;
      margin-bottom: 20px;
      text-align: center;
    }
  
    .add-product-form label {
      font-size: 14px;
      font-weight: bold;
      color: #555;
      margin-bottom: 5px;
      display: block;
      align-items: center;
      margin-left: 40px;
    }
  
    .add-product-form input,
    .add-product-form textarea {
      width: 80%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      margin-bottom: 15px;
      font-size: 14px;
      margin-left: 40px;
    }
  
    .add-product-form input[type="submit"] {
      background-color: #28a745;
      color: #fff;
      font-size: 16px;
      border: none;
      padding: 10px 20px;
      margin-top: 80px;
      cursor: pointer;
      border-radius: 5px;
      transition: background-color 0.3s;
      width: 40%;
      margin: 20px auto;
      display: block;
    }
  
    .add-product-form input[type="submit"]:hover {
      background-color: #218838;
    }

    label[for="category"] {
  font-size: 14px;
  font-weight: bold;
  color: #555;
  margin-bottom: 5px;
  display: block;
  align-items: center;
  margin-left: 40px;
}

select#category {
  width: 83%;
  padding: 10px;
  color: #555;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-bottom: 15px;
  font-size: 14px;
  margin-left: 40px;
}

select#category option {
  padding: 10px;
  border-bottom: 1px solid #ccc;
}

select#category option:hover {
  background-color: #f0f0f0;
}
  </style>

<div class="add-product-form">
  <h2>Add Product</h2>
  <% if (typeof success !== 'undefined') { %>
    <div 
    id="success-message" 
    style="color: green; text-align: center; font-size: 20px; padding: 20px 0px;">
    <%= success %>
  </div>
    <script>
        setTimeout(function() {
          document.getElementById('success-message').style.display = 'none';
        }, 5000);
      </script>
  <% } %>
  <form action="/admin/product-form" method="post">
    <label for="name">Product Name:</label>
    <input type="text" id="name" name="name" placeholder="Enter product name" required>
    <label for="description">Product Description:</label>
    <textarea id="description" name="description" placeholder="Enter product description" required></textarea>
    <label for="price">Product Price:</label>
    <input type="number" id="price" name="price" placeholder="Enter product price" required>
    <label for="image">Product Image:</label>
    <input type="text" id="image" name="image" placeholder="Enter product image URL" required>
    <label for="category">Category:</label>
    <select id="category" name="category" required>
      <% categories.forEach(category => { %>
        <option value="<%= category._id %>"><%= category.name %></option>
      <% }); %>
    </select>
    <input type="submit" value="Add Product">
  </form>
</div>